{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "CommonJS",
    "outDir": "./dist",
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "types": ["node", "express", "express-session", "mocha", "jest"]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "./src/**/*",
    "./config/**/*",
    "./tests/**/*",
    "scripts/**/*.ts"
  ]
}